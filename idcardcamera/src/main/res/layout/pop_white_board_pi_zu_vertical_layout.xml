<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pi_zu_bg"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pi_zu_item_defult"
        android:layout_marginRight="@dimen/x28"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pi_zu_item_defult_two_check"
        android:layout_marginRight="@dimen/x28"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_pi_zu_item_defult_three"
        android:layout_marginRight="@dimen/x28"
        />

        <FrameLayout
            android:id="@+id/fl_hua_plane_red"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/ic_pi_zu_item_defult_juxing_fist"
            android:layout_marginRight="@dimen/x28"
            >
            <TextView
                android:id="@+id/tv_red"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_pi_zu_item_defult_sim_juxing"
                android:layout_gravity="center"
                />
        </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_hua_plane_bule"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/ic_pi_zu_item_defult_juxing_two"
        android:layout_marginRight="@dimen/x28"
        >

        <TextView
            android:id="@+id/tv_bule"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_pi_zu_item_defult_sim_juxing"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_hua_plane_yellow"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/ic_pi_zu_item_defult_juxing"
        android:layout_marginRight="@dimen/x28"
        >
        <TextView
            android:id="@+id/tv_yellow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/ic_pi_zu_item_defult_sim_juxing"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </FrameLayout>


</LinearLayout>