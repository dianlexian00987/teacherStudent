<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <!--窗口全屏不显示状态栏-->
        <item name="android:windowFullscreen">true</item>
        <!--启动app图标透明之前的白屏过程  8.0bug-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ForgetPwdActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有背景色 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰色的百分比 0就是全透明了-->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗口全屏不显示状态栏-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CircleProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_gravity">center</item>
        <!--是否触摸外界消失-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--忘记密码弹框-->
    <style name="dialogForgetPwd" parent="Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有背景色 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰色的百分比 0就是全透明了-->
        <item name="android:backgroundDimAmount">0.3</item>
        <!--是否触摸外界消失-->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Activity全透明-->
    <style name="TransparentActivity" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有背景色 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰色的百分比 0就是全透明了-->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗口全屏不显示状态栏-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--不显示背景色-->
    <style name="dialogForgetPwdTwo" parent="Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有背景色 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 灰色的百分比 0就是全透明了-->
        <item name="android:backgroundDimAmount">0</item>
        <!--是否触摸外界消失-->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--相机拍照、选图片弹框-->
    <style name="dialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 测试了下也是内容背景色 会覆盖android:windowBackground-->
        <!--<item name="android:background">@android:color/holo_red_dark</item>-->
        <!-- 内容的背景色.对于全屏很重要，系统的内容宽度是不全屏的，替换为自己的后宽度可以全屏-->
        <!--相当于 dialog.getWindow().setBackgroundDrawable(new ColorDrawable(Color.TRANSPARENT));-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有背景色 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰色的百分比 0就是全透明了-->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--是否触摸外界消失-->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <!--<item name="android:windowEnterAnimation">@anim/bottom_show_dialog</item>-->
        <!--<item name="android:windowExitAnimation">@anim/bottom_hide_dialog</item>-->

    </style>

    <!-- dialog的style-->
    <style name="Dialog_Style" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension"/>
        <attr name="sl_shadowRadius" format="dimension"/>
        <attr name="sl_shadowColor" format="color"/>
        <attr name="sl_oval" format="boolean"/>
        <attr name="sl_dx" format="dimension"/>
        <attr name="sl_dy" format="dimension"/>
    </declare-styleable>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>



</resources>
